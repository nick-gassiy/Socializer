<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/darkBG"
>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp">

    <ImageButton
            android:id="@+id/upperSettings"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_settings_blue_24dp"
            android:background="@color/darkBG"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
    />
    <ImageButton
            android:id="@+id/editButton"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_create_black_24dp"
            android:background="@color/darkBG"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
    />

</RelativeLayout>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="30dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@color/male"
            android:clickable="true"/>

    <TextView
            android:paddingHorizontal="10dp"
            android:id="@+id/nameAgeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name, Age"
            android:textSize="10pt"
            android:layout_toRightOf="@id/profile_image"
            style="@style/TextViewBig"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/geoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="10pt"
        android:textColor="@color/black"
        style="@style/TextViewPrimary"
        android:layout_toRightOf="@id/profile_image"
        android:layout_below="@id/nameAgeTextView"
        android:background="@drawable/rounded_corners"
        android:layout_marginVertical="3dp"/>
</RelativeLayout>

<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="15dp">

    <LinearLayout
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="15dp"
            android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

</LinearLayout>